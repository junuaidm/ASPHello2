@model Person

@{
    // ViewBag.Title = "Home Page";
    ViewData["Title"] = "Home Page";
}

<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>


<ul >     
    <li>First Name: @Model.FirstName</li>
    <li>Last Name: @Model.LastName</li>
    <li>DOB: @Model.Birthdate.ToString("dd/MM/yyy")</li>
</ul>

<form asp-controller="Home"  asp-action="Index" method="post">
    <div asp-validation-summary="ValidationSummary.All" class="text-danger">

    </div>
    <div class="form-group">
        <label for="FirstName">First:</label>
        <input asp-for="FirstName"    class="form-control" placeholder="First" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="LastName">Last:</label>
        <input asp-for="LastName"   class="form-control" placeholder="Last" />
        <span asp-validation-for="LastName" class="text-danger" ></span>
    </div>
    <div class="form-group">
        <label for="Birthdate">DOB:</label>
        <input asp-for="Birthdate"   class="form-control" />
        <span asp-validation-for="Birthdate" class="text-danger"></span>
    </div>

        <button type="submit" value="Submit" class="btn btn-default">Submit</button>
    

</form>